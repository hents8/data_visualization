{# Expects: labels (array), data (array), id (string) #}

<div class="chart-container">
    <canvas id="{{ id }}"></canvas>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const el = document.getElementById('{{ id }}');
    if (!el) return;

    const ctx = el.getContext('2d');

    const labels = {{ labels|json_encode|raw }};
    const data = {{ data|json_encode|raw }};

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'RÃ©ponses',
                data: data,
                backgroundColor: labels.map(label => getColor(label, 0.7)),
                borderColor: labels.map(label => getColor(label, 1)),
                borderWidth: 1,
                borderRadius: 6,
                maxBarThickness: 38
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false },
                tooltip: {
                    callbacks: {
                        label: function (ctx) {
                            return `${ctx.label} : ${ctx.raw}`;
                        }
                    }
                }
            },
            scales: {
                x: {
                    ticks: {
                        font: { size: 11 }
                    }
                },
                y: {
                    beginAtZero: true,
                    ticks: {
                        precision: 0
                    }
                }
            }
        }
    });
});
</script>
